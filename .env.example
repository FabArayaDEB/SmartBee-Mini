# Configuración de la Base de Datos MySQL/MariaDB
# Estos valores deben coincidir con tu instalación de base de datos
DB_HOST=localhost                    # Dirección del servidor de base de datos
DB_USER=your_db_user                 # Usuario de la base de datos (ej: root, smartbee_user)
DB_PASSWORD=your_db_password         # Contraseña del usuario de base de datos
DB_NAME=smartbee                     # Nombre de la base de datos (se creará automáticamente)
DB_PORT=3306                         # Puerto de MySQL/MariaDB (3306 por defecto)

# Clave Secreta JWT (JSON Web Token)
# IMPORTANTE: Genera una cadena aleatoria segura para producción
# Puedes usar: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here

# Configuración del Broker MQTT
# MQTT es el protocolo usado para comunicación con los sensores IoT
MQTT_BROKER=mqtt://localhost:1883   # URL del broker MQTT (ej: Mosquitto)

# Puerto del Servidor Web
# Puerto donde se ejecutará el servidor backend
PORT=5000

# Entorno de Ejecución
# development: modo desarrollo con logs detallados
# production: modo producción optimizado
NODE_ENV=development