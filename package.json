{
  "name": "smartbee-mini",
  "version": "1.0.0",
  "description": "Sistema de monitoreo remoto de colmenas con sensores IoT",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:client",
    "build:client": "cd client && npm run build",
    "init-db": "node scripts/init-database.js",
    "test:mqtt": "node scripts/test-mqtt-publisher.js",
    "test:alerts": "node scripts/test-mqtt-publisher.js --alerts-only",
    "test:health": "node scripts/test-system-health.js",
    "test:all": "npm run test:health && npm run test:mqtt"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "socket.io": "^4.7.2",
    "mqtt": "^5.0.5",
    "moment": "^2.29.4",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "beekeeping",
    "iot",
    "monitoring",
    "mqtt"
  ],
  "author": "SmartBee Team",
  "license": "MIT"
}